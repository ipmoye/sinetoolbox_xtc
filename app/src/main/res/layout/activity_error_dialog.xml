<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blur_bg"
    tools:context=".dialog.ErrorDialog">
    <moye.sinetoolbox.xtc.view.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/err_dialog_title"
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_height="30dp"
                android:textColor="@color/font_error"
                android:text="错误"
                android:textSize="20dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/err_dialog_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textColor="@color/font_describe"
                android:text="发生错误"
                android:textSize="17dp"
                android:gravity="center"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="2dp"
                android:background="@drawable/button_default"
                android:textColor="@color/font_title"
                android:text="知道了"
                android:layout_marginBottom="5dp"
                android:onClick="_on_ok_click"
                android:stateListAnimator="@drawable/anim_button_touch" />
        </LinearLayout>
    </moye.sinetoolbox.xtc.view.ReboundScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>